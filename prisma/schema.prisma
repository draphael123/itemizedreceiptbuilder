// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  receipts      Receipt[]
  tasks         Task[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PricingRule {
  id            String   @id @default(cuid())
  planPrice     Float    // e.g., 199, 499
  planWeeks     Int      // e.g., 4, 8, 12
  medicationKey String   // e.g., "medication-a", "medication-b"
  category      String   // "Pharmacy", "Lab", "Clinical", "Operational", "Core"
  itemName      String
  itemDescription String?
  unitPrice     Float
  quantity      Float    @default(1)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([planPrice, planWeeks, medicationKey])
}

model Receipt {
  id                String   @id @default(cuid())
  patientName       String
  patientDOB        DateTime
  chargeDate        DateTime
  coverageStartDate DateTime
  coverageEndDate   DateTime
  patientState      String   // NY, NJ, MD, etc.
  planPrice         Float
  planWeeks         Int
  medications       String[] // Array of medication keys
  chargeAmount      Float    // Total charge amount
  breakdown         Json     // JSON breakdown of costs
  adjustmentAmount  Float?   // Adjustment if needed
  adjustmentReason  String?  // Reason for adjustment
  providerName      String
  providerNPI       String
  diagnosisCode     String
  procedureCode     String
  pdfUrl            String?  // Vercel Blob URL
  createdById       String
  createdBy         User     @relation(fields: [createdById], references: [id])
  tasks             Task[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("Open") // Open, Completed
  assignedToId String?
  assignedTo  User?    @relation(fields: [assignedToId], references: [id])
  receiptId   String?
  receipt     Receipt? @relation(fields: [receiptId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

